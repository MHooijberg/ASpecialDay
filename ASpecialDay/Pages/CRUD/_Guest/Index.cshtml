@model ASpecialDay.Pages.CRUD._Guest.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].InviteCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest[0].Lastname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Guest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InviteCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GuestID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GuestID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GuestID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
